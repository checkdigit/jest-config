{
  "name": "@checkdigit/jest-config",
  "version": "4.0.0",
  "description": "Check Digit standard Jest configuration",
  "author": "Check Digit, LLC",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/checkdigit/jest-config/issues"
  },
  "homepage": "https://github.com/checkdigit/jest-config#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/checkdigit/jest-config.git"
  },
  "private": false,
  "keywords": [
    "jest"
  ],
  "type": "module",
  "engines": {
    "node": ">=20.10"
  },
  "files": [
    "jest-preset.js"
  ],
  "peerDependencies": {
    "@jest/globals": "29.7.0",
    "@types/jest": "29.5.10",
    "dotenv": "16.3.1",
    "jest": "29.7.0",
    "ts-jest": "29.1.1"
  },
  "devDependencies": {
    "@checkdigit/eslint-config": "^9.0.0",
    "@checkdigit/prettier-config": "^5.0.0",
    "@checkdigit/typescript-config": "^6.0.0"
  },
  "scripts": {
    "lint": "eslint --max-warnings 0 --ignore-path .gitignore .",
    "lint:fix": "eslint --ignore-path .gitignore . --fix",
    "prettier": "prettier --ignore-path .gitignore --list-different .",
    "prettier:fix": "prettier --ignore-path .gitignore --write .",
    "test": "npm run ci:compile && npm run ci:test && npm run ci:lint && npm run ci:style",
    "ci:compile": "tsc --noEmit",
    "ci:test": "NODE_OPTIONS=\"--no-warnings --experimental-vm-modules\" jest --coverage=false",
    "ci:coverage": "NODE_OPTIONS=\"--no-warnings --experimental-vm-modules\" jest --coverage=true",
    "ci:lint": "npm run lint",
    "ci:style": "npm run prettier"
  },
  "eslintConfig": {
    "extends": [
      "@checkdigit/eslint-config"
    ]
  },
  "prettier": "@checkdigit/prettier-config"
}

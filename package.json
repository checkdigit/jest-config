{
  "name": "@checkdigit/jest-config",
  "version": "7.2.1",
  "description": "Check Digit standard Jest configuration",
  "private": false,
  "prettier": "@checkdigit/prettier-config",
  "main": "index.js",
  "engines": {
    "node": ">=16"
  },
  "peerDependencies": {
    "@types/jest": "^28.1.3",
    "jest": "^28.1.1",
    "ts-jest": "^28.0.8"
  },
  "scripts": {
    "postversion": "git push && git push --tags",
    "prettier": "prettier --list-different .",
    "prettier:fix": "prettier --write .",
    "lint": "eslint -f unix --ext .js,.ts src/**",
    "test": "npm run ci:compile && npm run ci:lint && npm run ci:style && npm run ci:test",
    "ci:test": "jest --coverage=false",
    "ci:coverage": "jest --coverage=true",
    "ci:compile": "tsc --noEmit",
    "ci:lint": "npm run lint",
    "ci:style": "npm run prettier"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/checkdigit/eslint-config.git"
  },
  "keywords": [
    "eslint"
  ],
  "author": "Check Digit, LLC",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/checkdigit/eslint-config/issues"
  },
  "homepage": "https://github.com/checkdigit/eslint-config#readme",
  "devDependencies": {
    "@checkdigit/eslint-config": "^7.2.2",
    "@checkdigit/prettier-config": "^3.0.0",
    "@checkdigit/typescript-config": "^3.1.0"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverageFrom": [
      "<rootDir>/src/**",
      "!<rootDir>/src/**/*.spec.ts"
    ],
    "globals": {
      "ts-jest": {
        "isolatedModules": true,
        "diagnostics": false
      }
    },
    "testMatch": [
      "<rootDir>/src/**/*.spec.ts"
    ]
  }
}
